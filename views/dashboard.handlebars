<div id="dashboard">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h2>Dashboard</h2>



<div class="container blog">
  <div class="row">
    <div class="col-md-2 col-sm-2">
      <a class="btn btn-default" href="/cms">New Post</a>
    </div>
    <div class="col-md-2 col-sm-2">
      <a class="btn btn-default" href="/authors">Manage Authors</a>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 blog-container">
      {{#each posts}}
        <div class="panel panel-default" data-post="{{id}}">
          <div class="panel-heading">
            <button class="delete btn btn-danger">x</button>
            <button class="edit btn btn-info">EDIT</button>
            <h2>{{title}} - test</h2>
              <small>{{createdAt}}</small>
            </h2>
            <h5 style="float: right; color: blue; margin-top: -10px;">Written by: {{Author.name}} </h5>
          </div>
          <div class="panel-body">
            <p>{{body}}</p>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>        

        <div class="col-lg-6">
            <div>
                GOOGLE MAPS API
            </div>
        </div>
        <div class="col-lg-6">
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="event-name">New Event</label>
            <input type="text" id="event-name" class="form-control" aria-describedby="event-name" placeholder="Enter New Event">
          </div>
          <div class="form-group">
            <label for="event-type">Event Type</label>
            <input class="form-control" id="event-type" aria-describedby="event-type" placeholder="Enter Event Type"></input>
          </div>
          <div class="form-group">
            <label for="event-description">Event Description</label>
            <textarea class="form-control" id="event-description" aria-describedby="event-description" placeholder="Enter Event Description"></textarea>
          </div>    
          <div class="form-group">
            <label for="event-location">Event Location</label>
            <input class="form-control" id="event-location" aria-describedby="event-location" placeholder="Enter Event Location"></input>
          </div>
          <button id="submit-event" class="btn btn-primary float-right">Submit</button>
        </form>
        </div>
        </div>
        <h3>Events:</h3>
        <ul id="events-list" class="list-group">
          {{#each eventList}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="events/{{this.id}}">
            {{this.eventName}}
            {{!-- <p>{{this.eventType}}</p><br/><br/>
            <p>{{this.eventDescription}}</p><br/><br/>
            <p>{{this.eventLocation}}</p><br/><br/> --}}
            </a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

